<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">

    <Properties>
        <Property name="LOG_PATTERN">
            %d{HH:mm:ss.SSS} %3p [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
    </Properties>

    <Appenders>
        <Console name="FEB22_CONSOLE_LOG">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="FEB22_CONSOLE_LOG"/>
        </Root>
    </Loggers>

</Configuration>
